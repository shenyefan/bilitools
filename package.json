{
  "name": "bili-tools",
  "version": "2.0.0",
  "description": "B站自动化工具",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bilitools-run": "./dist/index.js",
    "bilitools-login": "./dist/login.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "login": "node dist/login.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Moenya",
  "dependencies": {
    "@catlair/node-got": "^0.0.10",
    "axios": "^1.12.2",
    "got": "^14.4.9",
    "json5": "^2.2.3",
    "log4js": "^6.9.1",
    "qrcode": "^1.5.4",
    "tough-cookie": "^6.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/qrcode": "^1.5.5",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
